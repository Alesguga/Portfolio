---
interface Props {
	title: string;
}



const { title } = Astro.props;
---

<!doctype html>
<html
	lang="en"
	
>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon"  type="image/svg+xml" href="/compose.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative min-h-screen w-full bg-gray-100 dark:bg-gray-900 bg-light-gradient dark:bg-dark-gradient">
		<slot />
	</body>
</html>
<style is:global>
	html, body {
		font-family: "Segoe UI", sans-serif;
		scroll-behavior: smooth;
		scrollbar-width: none;
	}
	body{
		flex-direction: column;
		display: flex;
		min-height: 100vh;
	}
</style>
