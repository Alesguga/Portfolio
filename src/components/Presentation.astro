---
import Badge from './Badge.astro';
import Links from './Links.astro';

interface Props {
  name: string;
  description: string;
  location: string;
  imageUrl: string;
  links: Array<{ href: string; icon: string; alt: string }>;
}

const { name, description, location, imageUrl, links } = Astro.props;
---

<div class="container mx-auto flex flex-col md:flex-row items-center mt-20 space-y-6 md:space-y-0 md:space-x-10">
  <div class="md:flex-1 flex flex-col items-center md:items-start text-center md:text-left">
    <div class="flex flex-col md:flex-row items-center md:items-start">
      <h1 class="sm:text-5xl text-3xl bg-gradient-to-l pb-2 from-green-500 via-green-600 to-blue-500 text-transparent bg-clip-text font-bold">{name}</h1>
    </div>
    <p class="text-lg dark:text-white text-gray-950 mt-4">{description}</p>
    <div class="flex items-center mt-4 text-gray-600 dark:text-gray-300">
      <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C8.1 2 5 5.1 5 9c0 5.3 5.5 11.7 6.7 13.1.2.2.5.4.8.4s.6-.1.8-.4C13.5 20.7 19 14.3 19 9c0-3.9-3.1-7-7-7zm0 16c-.8 0-1.6-.3-2.2-.8-1.2-1.1-3.8-4.2-3.8-6.2 0-2.8 2.2-5 5-5s5 2.2 5 5c0 2-2.6 5.1-3.8 6.2-.6.5-1.4.8-2.2.8z"></path>
        <path d="M12 5c-2.2 0-4 1.8-4 4s1.8 4 4 4 4-1.8 4-4-1.8-4-4-4zm0 6c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"></path>
      </svg>
      <span>{location}</span>
    </div>
    <div class="mt-4">
      <Links {links} />
    </div>
  </div>
  <div class="md:w-48 w-32 h-auto">
    <img src={imageUrl} class="rounded-2xl object-cover" alt={name} />
  </div>
</div>
