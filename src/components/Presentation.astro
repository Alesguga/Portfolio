---
import Links from './Links.astro';

interface Props {
    name: string;
    description: string;
    tagline: string;
    location: string;
    imageUrl: string;
    links: Array<{ href: string; icon: string; alt: string }>;
}

const {name, description, tagline, imageUrl, links, location,} = Astro.props;
---

<div class="p-8 mt-12 sm:p-16">
    <div class="max-w-5xl mx-auto">
        <div class="relative bg-gradient-to-r from-purple-500 to-indigo-500 p-8 rounded-3xl shadow-lg dark:shadow-purple-900/50">
            <div class="absolute -top-12 left-1/2 transform -translate-x-1/2 w-32 h-32 rounded-full shadow-lg border-4 border-white dark:border-gray-800 overflow-hidden">
                <img src={imageUrl} alt={name} class="w-full h-full object-cover"/>
            </div>
            <div class="text-center mt-16">
                <h1 class="text-4xl font-extrabold text-white">{name}</h1>
                <p class="text-lg font-medium text-indigo-100 mt-2">{tagline}</p>
                <p class="text-gray-700 dark:text-gray-300 text-2xl leading-relaxed">{description}</p>
                <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed">{location}</p>
            </div>
        </div>

        <div class="mt-12 space-y-6">
            <div class="flex justify-center gap-4">
                <Links {links}/>
            </div>
        </div>
    </div>
</div>

<style>
    .dark .shadow-lg {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
    }
</style>