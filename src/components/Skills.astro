---
import Android from "../components/icons/Android.astro";
import Kotlin from "../components/icons/Kotlin.astro";
import ReactN from "../components/icons/ReactN.astro";
import Java from "../components/icons/Java.astro";
import BS5 from "../components/icons/BS5.astro";
import AstroSVG from "../components/icons/AstroSVG.astro";
import Compose from "./icons/compose.astro";
import Golang from "./icons/Golang.astro";
import Swift from "./icons/Swift.astro";
import Python from "./icons/Python.astro";
import Firebase from "./icons/Firebase.astro";
import Mongo from "./icons/Mongo.astro";
import Sqlite from "./icons/Sqlite.astro";
import Figma from "./icons/Figma.astro";

// Habilidades actuales
const SKILLS = [
    { name: "Kotlin", icon: Kotlin },
    { name: "Android", icon: Android },
    { name: "Compose", icon: Compose },
    { name: "Firebase", icon: Firebase },
    { name: "Java", icon: Java },
    { name: "Astro", icon: AstroSVG },
    { name: "Tailwind", icon: ReactN },
    { name: "Bootstrap 5", icon: BS5 },
    { name: "SQLite", icon: Sqlite },
    { name: "MongoDB", icon: Mongo },
    { name: "Figma", icon: Figma },
];

// Habilidades que est√°s aprendiendo
const LEARNING = [
    { name: "Compose", icon: Compose },
    { name: "Go", icon: Golang },
    { name: "Swift", icon: Swift },
    { name: "Python", icon: Python },
];
---

<style>
    .skill-name {
        opacity: 0;
        transition: opacity 0.3s;
    }
    .skill-container:hover .skill-name {
        opacity: 1;
    }
</style>

<div class="container mx-auto mt-8 space-y-12 p-4 sm:p-0">
    <h1 class="dark:text-white font-bold text-3xl text-gray-950">
        Skills
    </h1>
    <div>
        <div class="flex gap-8 flex-wrap sm:justify-start justify-center">
            {
                SKILLS.map((skill) => (
                    <div class="flex flex-col items-center skill-container">
                        <div class="size-24 bg-white dark:bg-gray-800 rounded-lg shadow-md flex items-center justify-center transition-transform transform hover:-translate-y-1 hover:shadow-lg">
                            <skill.icon class="size-16 text-black dark:text-white" />
                        </div>
                        <p class="mt-2 text-center text-gray-800 dark:text-gray-200 text-sm font-semibold skill-name">
                            {skill.name}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>

    <div >
        <h2 class="text-3xl font-bold mb-6 dark:text-white">
            Aprendiendo
        </h2>
        <div class="flex gap-8 flex-wrap sm:justify-start justify-center">
            {
                LEARNING.map((skill) => (
                    <div class="flex flex-col items-center skill-container">
                        <div class="size-24 bg-white dark:bg-gray-800 rounded-lg shadow-md flex items-center justify-center transition-transform transform hover:-translate-y-1 hover:shadow-lg">
                            <skill.icon class="size-16 text-black dark:text-white" />
                        </div>
                        <p class="mt-2 text-center text-gray-800 dark:text-gray-200 text-sm font-semibold skill-name">
                            {skill.name}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</div>
